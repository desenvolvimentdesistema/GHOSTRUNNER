             x:Class="GHOSTRUNNER.MainPage"
             Shell.NavBarIsVisible="false">

       <Grid>
              <HorizontalStackLayout x:Name="Layer1">
                     <Image Source="sky.jpg"
                            Aspect="Fill"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill"/>
                     <Image Source="sky.jpg"
                            Aspect="Fill"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill"/>
                     <Image Source="background.png"
